{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["./**/*.ts", "./**/*.tsx"],
    "ignore": ["node_modules/", "bun.lock", "tsconfig.json"]
  },
  "formatter": {
    "enabled": true,

    "attributePosition": "multiline",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 90
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "attributePosition": "multiline",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "a11y": {
        "all": true,
        "useValidAnchor": "off"
      },
      "complexity": {
        "all": true,
        "noExcessiveCognitiveComplexity": "off",
        "useLiteralKeys": "off",
        "useSimplifiedLogicExpression": "off",
        "noForEach": "off"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off",
        "noInnerDeclarations": "off",
        "noUnsafeFinally": "off"
      },
      "nursery": {
        "all": true,
        "useSortedClasses": "warn",
        "noSecrets": "off",
        "noNestedTernary": "off",
        "useImportRestrictions": "off",
        "useExplicitType": "off",
        "useGuardForIn": "off",
        "noHeadElement": "off",
        "noExportedImports": "off",
        "noDocumentCookie": "off",
        "noProcessEnv": "off",
        "useComponentExportOnlyModules": "off"
      },
      "performance": {
        "all": true,

        "noBarrelFile": "off",
        "noReExportAll": "off",
        "noDelete": "off",
        "useTopLevelRegex": "off"
      },
      "security": { "all": true, "noDangerouslySetInnerHtml": "off" },
      "style": {
        "all": true,
        "noDefaultExport": "off",
        "useBlockStatements": "off",
        "noNonNullAssertion": "off",
        "useConsistentArrayType": "off",
        "useFilenamingConvention": "off",
        "useNamingConvention": "off",
        "useShorthandArrayType": "off",
        "useDefaultSwitchClause": "off",
        "useSingleCaseStatement": "off",
        "useThrowOnlyError": "off",
        "useForOf": "off",
        "noArguments": "off",
        "noNamespaceImport": "off",
        "noNamespace": "off",
        "noImplicitBoolean": "off"
      },
      "suspicious": {
        "all": true,
        "noConsole": "off",
        "noReactSpecificProps": "off",
        "noConsoleLog": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noEvolvingTypes": "off",
        "noEmptyBlockStatements": "off",
        "noThenProperty": "off",
        "noRedeclare": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true
  }
}
