{
  "name": "@ronin/blade",
  "version": "0.3.0",
  "type": "module",
  "description": "React at the edge.",
  "repository": "ronin-co/blade",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "blade": "./dist/private/shell/index.ts"
  },
  "files": [
    "dist",
    "examples/basic/**/*"
  ],
  "exports": {
    "./client/hooks": {
      "types": "./dist/public/client/hooks.d.ts",
      "import": "./dist/public/client/hooks.js"
    },
    "./client/components/link.client": {
      "types": "./dist/public/client/components/link.client.d.ts",
      "import": "./dist/public/client/components/link.client.js"
    },
    "./server/hooks": {
      "types": "./dist/public/server/hooks.d.ts",
      "import": "./dist/public/server/hooks.js"
    },
    "./server/utils/data": {
      "types": "./dist/public/server/utils/data.d.ts",
      "import": "./dist/public/server/utils/data.js"
    },
    "./server/utils/errors": {
      "types": "./dist/public/server/utils/errors.d.ts",
      "import": "./dist/public/server/utils/errors.js"
    },
    "./universal/hooks": {
      "types": "./dist/public/universal/hooks.d.ts",
      "import": "./dist/public/universal/hooks.js"
    },
    "./universal/schema": {
      "types": "./dist/public/universal/schema.d.ts",
      "import": "./dist/public/universal/schema.js"
    },
    "./universal/types": {
      "types": "./dist/public/universal/types.d.ts",
      "import": "./dist/public/universal/types.js"
    }
  },
  "typesVersions": {
    "*": {
      "client/hooks": ["./dist/public/client/hooks.d.ts"],
      "client/components/link.client": ["./dist/public/client/components/link.client.d.ts"],
      "server/hooks": ["./dist/public/server/hooks.d.ts"],
      "server/utils/data": ["./dist/public/server/utils/data.d.ts"],
      "server/utils/errors": ["./dist/public/server/utils/errors.d.ts"],
      "universal/hooks": ["./dist/public/universal/hooks.d.ts"],
      "universal/schema": ["./dist/public/universal/schema.d.ts"],
      "universal/types": ["./dist/public/universal/types.d.ts"]
    }
  },
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check --error-on-warnings",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "vitest",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "react",
    "framework"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "dependencies": {
    "@fontsource-variable/inter": "5.1.0",
    "@hono/node-server": "1.14.1",
    "@hono/sentry": "1.2.0",
    "@mapbox/timespace": "2.0.4",
    "@mdx-js/mdx": "3.0.1",
    "@paralleldrive/cuid2": "2.2.2",
    "@sentry/bun": "8.55.0",
    "@sentry/react": "8.30.0",
    "@types/async-retry": "1.4.8",
    "@types/cookie": "0.6.0",
    "@types/get-value": "3.0.5",
    "@types/js-yaml": "4.0.9",
    "@types/ua-parser-js": "0.7.39",
    "@vercel/functions": "2.0.2",
    "async-retry": "1.3.3",
    "chalk": "5.3.0",
    "cookie": "0.7.0",
    "flat": "6.0.1",
    "get-port": "7.1.0",
    "get-value": "3.0.1",
    "gradient-string": "2.0.2",
    "hono": "4.6.20",
    "js-yaml": "4.1.0",
    "ora": "8.1.0",
    "p-queue": "8.0.1",
    "radash": "12.1.0",
    "rehype-pretty-code": "0.14.0",
    "ronin": "6.6.3",
    "serialize-error": "11.0.3",
    "ua-parser-js": "1.0.39"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@sentry/types": "8.30.0",
    "@types/bun": "1.2.4",
    "@types/flat": "5.0.5",
    "@types/gradient-string": "1.1.6",
    "@types/react": "18.3.6",
    "@types/react-dom": "18.3.0",
    "@types/web": "0.0.163",
    "@vitest/coverage-v8": "2.1.8",
    "tsup": "8.4.0",
    "typescript": "5.6.2",
    "vitest": "3.1.2"
  }
}
