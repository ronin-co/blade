{
  "name": "@ronin/blade",
  "version": "0.7.20",
  "type": "module",
  "description": "React at the edge.",
  "repository": "ronin-co/blade",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "blade": "./dist/private/shell/index.js"
  },
  "files": [
    "dist",
    "examples/basic/**/*"
  ],
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check --error-on-warnings",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "vitest",
    "build": "tsup",
    "dev": "tsup --watch",
    "prepare": "bun run build"
  },
  "exports": {
    "./client/": "./dist/public/client/",
    "./server/": "./dist/public/server/",
    "./universal/": "./dist/public/universal/",
    "./schema": "./dist/public/universal/schema"
  },
  "typesVersions": {
    "*": {
      "client/*": [
        "./dist/public/client/*"
      ],
      "server/*": [
        "./dist/public/server/*"
      ],
      "universal/*": [
        "./dist/public/universal/*"
      ],
      "schema": [
        "./dist/public/universal/schema"
      ]
    }
  },
  "keywords": [
    "react",
    "framework"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "dependencies": {
    "@ronin/compiler": "0.18.8",
    "@ronin/react": "0.1.4",
    "@ronin/syntax": "0.2.43",
    "@tailwindcss/node": "4.1.6",
    "@tailwindcss/oxide": "4.1.6",
    "ronin": "6.6.15"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@hono/node-server": "1.14.1",
    "@mdx-js/mdx": "3.0.1",
    "@types/async-retry": "1.4.8",
    "@types/bun": "1.2.4",
    "@types/cookie": "0.6.0",
    "@types/flat": "5.0.5",
    "@types/get-value": "3.0.5",
    "@types/gradient-string": "1.1.6",
    "@types/js-yaml": "4.0.9",
    "@types/react": "18.3.6",
    "@types/react-dom": "18.3.0",
    "@types/ua-parser-js": "0.7.39",
    "@vercel/functions": "2.0.2",
    "@vitest/coverage-v8": "2.1.8",
    "async-retry": "1.3.3",
    "chalk": "5.3.0",
    "cookie": "0.7.0",
    "flat": "6.0.1",
    "get-port": "7.1.0",
    "get-value": "3.0.1",
    "gradient-string": "2.0.2",
    "hono": "4.6.20",
    "js-yaml": "4.1.0",
    "ora": "8.1.0",
    "p-queue": "8.0.1",
    "radash": "12.1.0",
    "serialize-error": "11.0.3",
    "tsup": "8.4.0",
    "typescript": "5.6.2",
    "ua-parser-js": "1.0.39",
    "vitest": "3.1.2"
  }
}
