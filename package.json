{
  "name": "blade",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "biome check --error-on-warnings",
    "dev": "turbo dev --filter='./packages/*' --concurrency 24",
    "format": "biome format --write",
    "lint": "biome lint",
    "prepare": "turbo build --filter='@ronin/blade'",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "packageManager": "bun@1.2.16",
  "workspaces": ["docs/", "examples/*", "packages/*"],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.17",
    "turbo": "2.5.4"
  }
}
