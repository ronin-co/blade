{
  "name": "blade-compiler",
  "version": "3.18.2",
  "type": "module",
  "description": "Compiles RONIN queries to SQL statements.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check --error-on-warnings",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsdown",
    "dev": "tsdown --watch"
  },
  "keywords": [
    "query",
    "compiler",
    "sql"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.14",
    "hive": "1.2.4",
    "title": "4.0.1",
    "tsdown": "0.15.2",
    "typescript": "5.7.2"
  }
}
