{
  "name": "blade-hono",
  "version": "3.10.6",
  "type": "module",
  "description": "Access your RONIN database via Hono.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check --error-on-warnings",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsup ./src/index.ts --dts --format esm"
  },
  "keywords": [
    "hono",
    "middleware",
    "database",
    "orm"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.18",
    "hono": "4.6.17",
    "msw": "2.7.0",
    "tsup": "8.3.5",
    "typescript": "5.7.3"
  },
  "peerDependencies": {
    "hono": ">=3.9.0",
    "ronin": ">=6.0.18"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": false
    },
    "ronin": {
      "optional": false
    }
  }
}
