{
  "name": "blade-auth",
  "version": "3.19.1",
  "type": "module",
  "description": "Easily set up auth for Blade apps",
  "repository": {
    "directory": "packages/blade-auth",
    "url": "ronin-co/blade",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./triggers/*": "./dist/triggers/*.js",
    "./schema": "./dist/schema.js"
  },
  "typesVersions": {
    "*": {
      "triggers/*": [
        "./dist/triggers/*"
      ],
      "schema": [
        "./dist/schema"
      ]
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --pretty"
  },
  "keywords": [
    "blade",
    "auth"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "tsdown": "0.15.5",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "2.2.2",
    "better-auth": "1.3.27"
  }
}
