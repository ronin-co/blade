{
  "name": "blade-syntax",
  "version": "3.10.14",
  "type": "module",
  "description": "Allows for defining RONIN queries and schemas in code.",
  "files": [
    "dist"
  ],
  "exports": {
    "./schema": "./dist/schema.js",
    "./queries": "./dist/queries.js"
  },
  "typesVersions": {
    "*": {
      "schema": [
        "./dist/schema"
      ],
      "queries": [
        "./dist/queries"
      ]
    }
  },
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "database",
    "schema",
    "primitives"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.2.4",
    "blade-compiler": "workspace:*",
    "expect-type": "1.2.0",
    "tsup": "8.4.0",
    "typescript": "5.8.2"
  }
}
